<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="設定">
        <EditTextPreference
            app:defaultValue="張三"
            app:key="user"
            app:title="使用者"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="http://192.168.0.238/okhttp/api/values/CacheFileUpload"
            app:key="url"
            app:title="Web API URL"
            app:useSimpleSummaryProvider="true" />

        <DropDownPreference
            app:defaultValue="3"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="picture_display_qty"
            app:title="相簿欄格數"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="關於">
        <EditTextPreference
            app:defaultValue="1.0"
            app:enabled="false"
            app:key="version"
            app:shouldDisableView="false"
            app:title="版本"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:shouldDisableView="true" />

</PreferenceScreen>